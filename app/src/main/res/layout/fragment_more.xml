<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_1"
    tools:context=".ui.components.fragment.more.MoreFragment">

    <include
        android:id="@+id/inclFm"
        layout="@layout/layout_app_header" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFmMore"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inclFm"
        tools:itemCount="5"
        tools:listitem="@layout/item_more" />

</androidx.constraintlayout.widget.ConstraintLayout>